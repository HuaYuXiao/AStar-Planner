<launch>
        <!-- 关于坐标系转换请参看文档相关说明 -->

        <!-- base_link: 机体坐标系 -->
        <!-- 注意，当无人机起飞点不在 0,0,0时, gazebo中的坐标系并非与map系的原点重合 -->

	<!-- TF for world and map-->
	<!-- 仿真中引入world系和map系, 实际实验中vicon/world != map系 -->
	<!-- world: 世界系,即gazebo坐标系 -->
	<!-- map:   以飞机起飞点为原点的坐标系  -->
	<node pkg="tf2_ros" type="static_transform_publisher" name="tf_world_map"
          	args="-1.17 -3.51 0 0 0 0 world map"/>

	<!-- TF for base_link-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="tf_t265"
          	args="0.1 0 0 0 0 0 base_link t265_link"/>

        <!-- TF for 2D lidar-->
        <!-- lidar_link是2D激光雷达坐标系 -->
        <!-- 机体系与2Dlidar_link的坐标转换关系见 P300_2Dlidar.sdf -->
  	<node pkg="tf2_ros" type="static_transform_publisher" name="tf_2Dlidar"
          	args="0 0 0.05 0 0 0 base_link lidar_link"/>
</launch>

